<script>
    $(document).ready(function () {
        $('#btn1').click(function () {
            $.ajax({
                type: "POST",
                url: "/ParagraphManipulation/ButtonClick",
                data: { button: $('#btn1').val(), paragraphInput: $('#txtParagraphInput').val() },
                success: function (result) {
                    $('#txtParagraphOutput').html(result);
                },
                error: function (errorData) {
                    alert("Error Occured");
                }
            });
        });

        $('#btn2').click(function () {
